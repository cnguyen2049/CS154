
public class Iteration implements RegEx{
	RegEx base;
	public Iteration(RegEx base){
		this.base = base;
	}
	
	public int length(String s){
		for(int i=0;i<s.length();i++){
			if(base.matches(s)){
				return i;
			}
		}
		return 0;
	}
	@Override
	public boolean matches(String s) {
		int index = s.indexOf(base.toString());
		int jump = 0;
		for(int i=0;i<s.length();i =  i + jump){	
			
			if(base.matches(s.substring(i,jump))){
				jump = i+i;
			}
		}
		return true;
	}
	public String toString(){
		return "" + base.toString();
	}


}
