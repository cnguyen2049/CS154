
public class Lab8 {
	
	public static String doubleFunc(String x){
		VirtualMachine vm = new VirtualMachine();
		vm.add("load z, " + x);
		vm.add("loop " + x);
		vm.add("inc z");
		vm.add("end");
		vm.load("load w, z")
		vm.run();
		vm.printInfo();
		return Integer.toString(vm.variables.get("w"));
	}
	
	public static String exp(String m){
		VirtualMachine vm = new VirtualMachine();
		vm.add("load x, 1");
		vm.add("loop m");
		vm.add("load result, " + doubleFunc("1"));
		
		vm.run();
		vm.printInfo();
		return "";
	}
	public static void main(String args []){
		//doubleFunc("10");
		exp("3");
	}
}
