public class Choice implements RegEx{
	RegEx first;
	RegEx second;
	public Choice (RegEx first, RegEx second){
		this.first = first;
		this.second = second;
	}
	

	@Override
	public boolean matches(String s) {
		//System.out.println(first.toString());
		//System.out.println(second.toString());
		int firstLast = s.lastIndexOf(first.toString());
		//System.out.println(index);
		int startSecond = s.indexOf(second.toString());
		
		if(firstLast==0){
			String str1 = s.substring(0,s.length()-1);
			if(first.matches(str1)){
				return true;
			}
		}
		//System.out.println(index2);
		String str1 = s.substring(0,firstLast+1);
		//System.out.println(str1);
		String str2 = s.substring(startSecond,s.length());
		//System.out.println(str2);
		if(first.matches(str1) || second.matches(str2)){
			return true;
		}
		return false;
	}

}