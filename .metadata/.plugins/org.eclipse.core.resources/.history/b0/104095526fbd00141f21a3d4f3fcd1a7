
public class Concat implements RegEx{
	RegEx first;
	RegEx second;
	public Concat (RegEx first, RegEx second){
		this.first = first;
		this.second = second;
	}
	

	@Override
	public boolean matches(String s) {
		int index = s.lastIndexOf(first.toString());
		//System.out.println(index);
		int index2 = s.indexOf(second.toString());
		if index == -1 || index2 == -1{
			return false;
		}
		System.out.println(index2);
		String str1 = s.substring(0,index+1);
		//System.out.println(str1);
		String str2 = s.substring(index2,s.length());
		//System.out.println(str2);
		if(first.matches(str1) && second.matches(str2)){
			return true;
		}
		return false;
	}

}
