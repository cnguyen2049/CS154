
public class Iteration implements RegEx{
	RegEx base;
	public Iteration(RegEx base){
		this.base = base;
	}
	
	public int length(String s){
		for(int i=0;i<s.length();i++){
			if(base.matches(s.substring(0,i))){
				return i;
			}
		}
		return -1;
	}
	@Override
	public boolean matches(String s) {
		int len = length(s);
		//System.out.println(index);
		for(int i=0;i<s.length();i = i + len){	
			System.out.println(s.substring(i,index));
			if(!base.matches(s.substring(i,index))){
				return false;
			}
		}
		return true;
	}
	public String toString(){
		return "" + base.toString();
	}


}
